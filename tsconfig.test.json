{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["vite/client", "svelte", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.d.ts",
    "src/**/*.svelte"
  ]
}
